# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{html,xml}]
charset = utf-8
indent_style = space
indent_size = 4

[*.{js,json}]
charset = utf-8
indent_style = space
indent_size = 2

[*.{css,scss}]
charset = utf-8
indent_style = space
indent_size = 2
